{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Quell",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
                {
                    "name": "keyword.control.quell",
                    "match": "\\b(match|do|in|letrec|let|when|with)\\b"
                },
                {
                    "name": "keyword.operator.quell",
                    "match": "\\b(as|record|_|->)\\b"
                },
                {
                    "name": "keyword.other.quell",
                    "match": "\\b(alias|data|derive|export|family|foreign|impl|infix|module|newtype|none|pattern|record|rec|role|signature|static|trait|type|use|where|_|Default|Self)\\b"
                }
            ]
		},
		"strings": {
			"name": "string.quoted.double.quell",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.quell",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.quell"
}
